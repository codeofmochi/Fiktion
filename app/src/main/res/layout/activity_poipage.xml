<?xml version="1.0" encoding="utf-8"?>

<!-- REMOVE THIS SCROLLVIEW -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.fiktion.views.POIPageActivity">

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/akibairl2"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Akihabara, Tokyo"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainImage"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/featured"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:text="Featured in Steins;Gate, Love Live!, Oreimo, Shirobako, No Game No Life, The Idolm@ster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featured"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/upvoteButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/thumb_up_icon"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Vote +1"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainImage"
        tools:layout_editor_absoluteX="264dp" />

    <ch.epfl.sweng.fiktion.views.ScrollableMapView
        android:id="@+id/map"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/photoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pictures"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/addPictureButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/camera_icon"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Add a picture"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        tools:layout_editor_absoluteX="218dp" />

    <HorizontalScrollView
        android:id="@+id/imgSlider"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/photoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbarFadeDuration="0"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/akibairl2" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/akibairl" />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/akiba" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/reviewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="User reviews"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSlider"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/addReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/rate_review_icon"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Add a review"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSlider"
        tools:layout_editor_absoluteX="225dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reviews"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewsTitle"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clipToPadding="false"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/nearbyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nearby"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviews"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>

</ScrollView>
