<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.fiktion.FindNearestPoisActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <SeekBar
        android:id="@+id/searchRadius"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="199dp"
        android:layout_height="17dp"
        android:max="100"
        android:progress="50"
        tools:layout_editor_absoluteY="69dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/radiusSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="107dp"
        tools:layout_editor_absoluteX="185dp" />

    <Button
        android:id="@+id/findNearPois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find near places !"
        tools:layout_editor_absoluteY="144dp"
        tools:layout_editor_absoluteX="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="167dp"
        android:layout_height="22dp"
        android:layout_marginTop="29dp"
        android:text="Set your search Radius"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="24dp" />

</android.support.constraint.ConstraintLayout>
