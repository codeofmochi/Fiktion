<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.fiktion.views.tests.FindNearestPoisActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <SeekBar
        android:id="@+id/searchRadius"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="199dp"
        android:layout_height="17dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/radiusSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_search_radius"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/searchRadius"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/_findNearPois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:onClick="startDisplayNearestPoisActivity"
        android:text="@string/find_near_places"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiusSelect" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="167dp"
        android:layout_height="22dp"
        android:layout_marginTop="29dp"
        android:text="@string/set_search_radius"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
